{
  "version": "0.0.1",
  "tasks": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "deno fmt .",
    "lint": "deno fmt --check . && eslint .",
    "lint:fix": "deno fmt . && eslint . --fix"
  },
  "imports": {
    "$lib": "./src/lib",
    "@eslint/compat": "npm:@eslint/compat@^1.2.3",
    "@eslint/js": "npm:@eslint/js@^9.22.0",
    "@sveltejs/adapter-node": "npm:@sveltejs/adapter-node@^5.2.12",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.0.0",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^4.0.0",
    "autoprefixer": "npm:autoprefixer@^10.4.20",
    "eslint": "npm:eslint@^9.7.0",
    "eslint-plugin-svelte": "npm:eslint-plugin-svelte@^2.36.0",
    "globals": "npm:globals@^15.0.0",
    "svelte": "npm:svelte@^5.15.0",
    "svelte-check": "npm:svelte-check@^4.0.0",
    "tailwindcss": "npm:tailwindcss@^3.4.9",
    "typescript": "npm:typescript@^5.0.0",
    "typescript-eslint": "npm:typescript-eslint@^8.0.0",
    "vite": "npm:vite@^5.4.11",
    "@tailwindcss/forms": "npm:@tailwindcss/forms@^0.5.9",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.15"
  },

  "nodeModulesDir": "auto",
  "rules": {
    "tags": ["recommended"]
  },
  "fmt": {
    "singleQuote": true
  },
  "unstable": ["fmt-component", "detect-cjs"]
}
